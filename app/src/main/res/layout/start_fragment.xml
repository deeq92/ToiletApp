<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <Button
        android:id="@+id/map_button"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="false"
        android:layout_below="@+id/appicon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="75dp"
        android:backgroundTint="@color/colorPrimary2"
        android:fontFamily="sans-serif"
        android:text="Find A Bathroom"
        android:textColor="@android:color/white"
        android:textSize="18sp" />

    <Button
        android:id="@+id/list_button"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="false"
        android:layout_below="@+id/map_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:backgroundTint="@color/colorPrimary2"
        android:fontFamily="sans-serif"
        android:text="Bathroom List"
        android:textColor="@android:color/white"
        android:textSize="18sp" />

    <Button
        android:id="@+id/review_button"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="false"
        android:layout_below="@+id/list_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:backgroundTint="@color/colorPrimary3"
        android:fontFamily="sans-serif"
        android:text="Add New Toilet"
        android:textColor="@android:color/white"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/appicon"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        app:srcCompat="@mipmap/ic_launcher" />

    <Button
        android:id="@+id/login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/review_button"
        android:layout_below="@+id/review_button"
        android:layout_marginTop="19dp"
        android:text="login" />

    <Button
        android:id="@+id/signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/review_button"
        android:layout_alignTop="@+id/login"
        android:text="Sign up" />
</RelativeLayout>